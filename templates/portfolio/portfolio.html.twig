<!-- Contact -->
<section class="container-fluid contact" id="contact">
  <div class="container">
    <h3 class="text-center">Contact</h3>
    <form name="sentMessage" id="contactForm" novalidate>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <input type="text" id="name" class="form-control" placeholder="Name" required="required">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <input type="email" id="email" class="form-control" placeholder="Email" required="required">
            <p class="help-block text-danger"></p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-lg-12">
          <textarea name="message" id="message" class="form-control" rows="4" placeholder="Message" required></textarea>
          <p class="help-block text-danger"></p>
        </div>
      </div>
      <div class="row text-center">
        <div class="text-center col-lg-12">
          <button type="submit" class="btn btn-default btn-lg">Envoyer</button>
        </div>
      </div>
    </form>
    <div class="d-flex justify-content-around social">
      <a href="https://www.facebook.com/flillo.smmt" target="_blank"><i class="fab fa-facebook-square fa-3x"></i></a>
      <a href="https://www.linkedin.com/in/floriane-simmet-0412/" target="_blank"><i class="fab fa-linkedin fa-3x"></i></a>
      <a href="https://github.com/Fsimmet2" target="_blank"><i class="fab fa-github-square fa-3x"></i></a>
    </div>
  </div>
</section>



